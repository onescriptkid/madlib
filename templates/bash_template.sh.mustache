# On finish, show success or failure depending on the exit code
trap "finish" EXIT
trap 'exit 129' HUP
trap 'exit 130' INT
trap 'exit 143' TERM
finish() {
  local exit_code="$?"

  if [ "$exit_code" != "0" ]; then
    echo ""
    usage
    echo ""
    print_failure "$0 failed with code $exit_code"
  else
    echo ""
    print_success "$0 succeeded"
    echo ""
  fi
  exit $exit_code
}

